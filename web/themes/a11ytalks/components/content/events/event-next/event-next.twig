<div {{ attributes.addClass('event-next') }}>
  {{ title_suffix }}
  <div class='meta'>
    <div class='speaker image'>
      {% block speaker_image %}
        {% include 'a11ytalks:speaker-next' with { label: 'Spiffy Speaker' }%}
      {% endblock %}
    </div>
    <div class='content'>
      <h2 class='date'>
        {{ field_date_time }}
      </h2>
      <h3 class="speaker-label">{{speaker_label}}</h3>
      <h3 class='title'>
        <a class='title-link' href={{ url }}>{{ label }}</a>
      </h3>
      <div class="description">
        {{ body }}
        <a class='readmore' href={{ url }}>Read more<span class="sr-only"> about {{ label }}</span></a>
      </div>
    </div>
  </div>

  <hr class="hr-last" />
</div>

{% stories fields with { title: "A11yTalks/Fields" } %}

  {% story field_tags with {
    name: "Field Tags",
    args:{
      items: [
        { name: 'Tag 1', url: "#" },
        { name: 'Tag 2', url: "#" }
      ]
    }
  } %}
    {% embed 'a11ytalks:field-tags' %}
      {% block tag_items %}
        {% for item in items %}
          {% include "a11ytalks:tags" with { name: item.name, url: item.url } %}
        {% endfor %}
      {% endblock %}
    {% endembed %}

  {% endstory %}
{% endstories %}
